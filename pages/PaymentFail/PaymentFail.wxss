.box {
  width: 100%;
  overflow: hidden;
}

.box .title {
  width: 100%;
  background: #ffec99;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #ff980c;
}

.box .content {
  margin: 20rpx;
  background: #fff;
  margin-bottom: 0;
  padding-bottom: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.box .content view:nth-child(1) {
  width: 114rpx;
  height: 114rpx;
  margin: 75rpx auto 0;
}
.box .content view:nth-child(1) image {
 width: 100%;
 height: 100%;
}
.box .content view:nth-child(2) {
    font-size: 26rpx;
    line-height: 30rpx;
    height: 30rpx;
   margin: 50rpx auto 0;
    text-align: center;
}
.box .content view:nth-child(2) text:nth-child(1) {
    color: #333333;
}
.box .content view:nth-child(2) text:not(:nth-child(1)) {
    color: #fa6254;
}
.box .content view:nth-child(3) {
    font-size: 24rpx;
    line-height: 24rpx;
    height: 24rpx;
    margin: 30rpx 30rpx 0;
    padding-bottom: 50rpx;
    text-align: center;
    border-bottom: 2rpx solid #cccccc;
}
.box .content view:nth-child(3)  {
    color: #999999;
}
.box .content view:nth-child(3) text:nth-child(2){
   margin-left: 50rpx;
}
.box .request {
    margin: 0 20rpx;
    height: 88rpx;
    background: #ffffff;
}
.box .request text{
    display: inline-block;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #ffffff;
    font-size: 26rpx;
    line-height: 50rpx;
    height: 50rpx;
    background: #04ccab;
    border-radius: 4rpx;
    float: right;
    
}
.box .request text:first-child{
   margin-right: 20rpx;
}
.box .request text:nth-child(2){
   margin-right: 50rpx;
}