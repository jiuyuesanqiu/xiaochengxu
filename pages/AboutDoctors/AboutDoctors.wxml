        <view class="content">{{inputCity}}</view>
        <view class="icon"></view>
      </view>
      <view class="nav-son borders {{shownavindex == 2? 'active' : ''}}" bindtap="list" data-nav="2" wx:key="13">
        <view class="content">{{inputHospital}}</view>
        <view class="icon"></view>
      </view>
      <view class="nav-son borders {{shownavindex == 3? 'active' : ''}}" bindtap="listpx" data-nav="3" wx:key="12">
        <view class="content">{{inputOffice}}</view>
        <view class="icon"></view>
      </view>
      <view class="nav-son {{shownavindex == 4? 'active' : ''}}" bindtap="listzc" data-nav="4" wx:key="11">
        <view class="content">{{inputTtile}}</view>
        <view class="icon"></view>
      </view>
    </view>
    <view class="quyu {{qyopen ? 'slidown' : 'slidup'}} {{qyshow ? 'disappear':''}} zindex-medium">
      <view class="qy quyu-left">
        <view class="{{select1 == index ? 'current' : ''}}" wx:for="{{cityleft}}" bindtap="selectleft" data-city='{{index}}' wx:key="6">
          {{index}}
        </view>
      </view>
      <view class="qy quyu-center">
        <view class="{{select2 == index ? 'current2' : ''}}" wx:for="{{citycenter}}" bindtap="selectcenter" data-city='{{index}}' wx:key="5">
          {{index}}
        </view>
      </view>
    </view>
   
    <view class="temp temp1 {{nzopen ? 'slidown' : 'slidup'}} {{nzshow ? 'disappear':''}}">
      <view wx:for="{{content}}" bindtap='showHospital' data-text='{{item}}' wx:key="3">
        {{item}}
      </view>
    </view>
    <view class="temp temp2 {{pxopen ? 'slidown' : 'slidup'}} {{pxshow ? 'disappear':''}}">
      <view wx:for="{{content}}" bindtap='showOffice' data-text='{{item}}' wx:key="2">
        {{item}}
      </view>
    </view>
    <view class="temp temp3 {{zcopen ? 'slidown' : 'slidup'}} {{zcshow ? 'disappear':''}}">
      <view wx:for="{{content}}" bindtap='showTitle' data-text='{{item}}' wx:key="1">
        {{item}}
      </view>
    </view>
    <view class="fullbg {{isfull ?'fullopacity':''}}" bindtap="hidebg"></view>
