.search {
  position: relative;
}

.search form input {
  height: 60rpx;
  width: 710rpx;
  font-size: 26rpx;
  color: #999;
  background: #fff;
  box-sizing: border-box;
  padding-left: 77rpx;
  border-radius: 710rpx;
  margin: 0 auto 20rpx;
}

.search form image {
  position: absolute;
  display: inline-block;
  width: 36rpx;
  height: 38rpx;
  top: 10rpx;
  left: 43rpx;
}

.sort {
  width: 100%;
  height: 86rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.sort image {
  width: 14rpx;
  height: 8rpx;
  margin-left: 10rpx;
}

.doctors-details {
  width: 710rpx;
  height: 172rpx;
  background: #fff;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.doctors-details image {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  border-radius: 50%;
  margin-left: 20rpx;
}

.doctors-details-right {
  display: flex;
  position: relative;
  left: -30rpx;
  flex-direction: column;
}

.doctors-details-right view:first-child {
  font-size: 28rpx;
  color: #333;
}

.doctors-details-right view:first-child text:nth-child(2) {
  margin-left: 20rpx;
  color: #666;
}

.doctors-details-right view:nth-child(2) {
  margin: 20rpx 0;
  position: relative;
  left: -20rpx;
  font-size: 22rpx;
  color: #333;
}

.doctors-details-right view:nth-child(2) image {
  margin-right: 10rpx;
  width: 18rpx;
  height: 24rpx;
}

.doctors-details-right view:nth-child(3) {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 530rpx;
}


/* 下拉列表 */
.page {
  height: 100%;
  background: #fff;
  overflow: hidden;
}

.nav {
  position: relative;
  z-index: 5;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 40px;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

 .content {
  display: inline-block;
}

.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #9b9b9b;
  margin-left: 5px;
}

.temp {
  position: relative;
  z-index: 4;
}

 .temp1 {
  display: none;
  width: 300rpx;
  max-height: 450rpx;
  overflow-y: scroll;
  padding: 0 0 0 20rpx;
  line-height: 100rpx;
  background: #fff;
  position: absolute;
  z-index: 2;
}

.temp2 {
  display: none;
 width: 300rpx;
  max-height: 450rpx;
  overflow-y: scroll;
  padding: 0 0 0 20rpx;
  line-height: 100rpx;
  background: #fff;
  position: absolute;
  z-index: 2;
}

.temp3 {
  display: none;
  width: 33.3%;
  max-height: 450rpx;
  overflow-y: scroll;
  padding: 0 0 0 20rpx;
  line-height: 100rpx;
  background: #fff;
  position: absolute;
  z-index: 2;
}

.temp view {
  border-bottom: 1px solid #d1d3d4;
  font-size: 14px;
  color: #666;
}

.quyu {
  position: absolute;
  display: none;
  height: 450rpx;
  width: 70%;
  z-index: 5;
}

.quyu .qy {
  overflow-y: scroll;
  float: left;
  width: 50%;
  height: 450rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 14px;
  color: #717273;
}
.qy view {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: 15rpx;
}

.quyu-left {
  background: #fff;
}

.quyu-center {
  background: #fff;
  
}
.current {
  background: #e0e0e0;
}

.current2 {
  background: #fff;
}

.fullbg {
  position: absolute;
  top: 0;
  bottom:0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  transition: all 2s;
  opacity: 0;
  display: none;
}

.fullopacity {
  opacity: 1;
}

.nav-son.active .content {
  color: #61beff;
}

.nav-son.active .icon {
  border-bottom: 4px solid #61beff;
  border-top: 0;
}

.slidown {
  display: block;
  animation: slidown 0.7s ease-in both;
}

.slidup {
  display: none;
  animation: slidup 0.7s ease-in both;
}

.disappear {
  display: none;
  position: absolute;
  z-index: 2;
}  
