
.container{
  padding: 0;
  background: #f5f5f5;
  min-height: 1200rpx;
}
.banner{
  height: 230rpx;
  width: 100%;
  background: linear-gradient(to right,#04ccab, #5ce693);
  position: absolute;
}
.doctors-home{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 710rpx;
  height: 200rpx;
  border-radius: 4rpx;
  background: #fff;
  flex-direction: column;
  position: relative;
  margin: 0 auto;
  top: 120rpx;
  box-sizing: border-box;
}
.doctors-home image:first-child{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 6rpx solid #fff; 
   position: relative;
  top: -64rpx; 
  /* opacity:0.3;       filter:alpha(opacity=30); */
}
.doctors-home view:nth-child(2){
  font-size: 28rpx;
  color: #333;
 position: relative;
 top: -34rpx;
}
.doctors-home view:nth-child(2) text:first-child{
   margin-right: 24rpx;
}
.doctors-home view:nth-child(3){
  font-size: 22rpx;
  color: #999;
  position: relative;
  top: -20rpx;
}
.doctors-home view:nth-child(3) image{
  margin-right: 10rpx;
  width: 18rpx;
  height: 24rpx;
  border: 0;
  position: static;
}
.list{
  position: relative;
  top: 140rpx;
  width: 710rpx;
  margin: 0 auto;
  background: #fff;
}
.weui-navbar__item{
  width: 33.3%!important;
  height: 88rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.ServiceItems{
 width: 100%;
}
.items{
  width: 100%;
   height: 200rpx;
  display: flex;
  justify-content: center;
 align-items: center;
 padding: 30rpx 0;
}
.items view{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.items view image{
  width: 34rpx;
  height: 34rpx;
  margin: 30rpx 0;
}
.items view text{
margin-bottom: 20rpx;
}
.items view text:nth-child(2){
  font-size: 26rpx;
  color: #333;
}
.items view text:nth-child(3){
  font-size: 22rpx;
  color: #f55546;
}
.items view text:nth-child(4){
  font-size: 22rpx;
  color: #999999;
}
.clear{
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}
.Expertise{
  width: 100%;
  background: #fff;
  padding-bottom: 20rpx;
}
.Expertise   view  image:first-child{
  width: 4rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.Expertise   view image:nth-child(3){
  width: 30rpx;
  height: 15rpx;
  margin-right: 10rpx;
}
.Expertise view:first-child{
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
}
.Expertise text{
  font-size: 26rpx;
  color: #333;
  width: 100%;
}
.Expertise view:nth-child(2){
  overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
   padding: 0 20rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #666;
}
.introduce view:nth-child(2){
  -webkit-line-clamp: 8;
}
.box{
  display: flex;
  justify-content:space-between;
  padding: 0 40rpx;
}
.col{
  flex-direction:column;
}
.weui-tab__content image{
  width: 25rpx;
  height: 25rpx;
}
.box text{
  font-size: 14px;
  padding-right: 5px;
}
.center{
  display: inline-flex;
  align-items:center;
}
text{
  font-size: 14px;
}
.bet{
  display: inline-flex;
  width: 100%;
  justify-content:space-between;
  align-items:center;
}
.gray{
  color: #888888;
}